= form_for :session, url: sessions_path, html: {class: "form-horizontal form", role: "form"}  do |f|
	%h1.form-header Sign In

	.form-group.first-form-group
		= f.label :username, class: "col-sm-2 control-label"
		.col-sm-10
			= f.text_field :username, class: "form-control"

	.form-group
		= f.label :password, class: "col-sm-2 control-label"
		.col-sm-10
			= f.password_field :password, class: "form-control"

	.form-group
		.col-sm-offset-2.col-sm-10
			= link_to "Forgotten your password?", new_password_reset_path

	.form-group
		.col-sm-offset-2.col-sm-10
			.checkbox
				%label
					= f.check_box :remember_me
					%span Remember me?

	.form-group	
		.col-sm-offset-2.col-sm-10
			= f.submit "Log In", class: "btn btn-primary"		
				

